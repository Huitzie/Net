
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can read and write to their own user document.
      allow read, write: if isOwner(userId);
      allow list: if false; // Don't allow listing all users.
    
      match /client/{document=**} {
        // Users can read and write to their own private client profile.
        allow read, write: if isOwner(userId);
      }
      
      match /events/{eventId} {
        // Users can manage their own event collections.
        allow read, write: if isOwner(userId);
      }
    }

    match /vendors/{vendorId} {
      allow get, list: if true; // Publicly readable
      // Vendor profiles can only be created or modified by the owner.
      allow create, update, delete: if isOwner(vendorId);

      match /services/{serviceId} {
        allow get, list: if true; // Publicly readable
        // Vendor services can only be managed by the owner.
        allow create, update, delete: if isOwner(vendorId);
      }
      
       match /ratings/{ratingId} {
        allow get, list: if true; // Publicly readable
        // Any signed-in user can create a rating for a vendor.
        allow create: if isSignedIn();
        // Only the client who wrote the rating can update or delete it.
        allow update, delete: if isSignedIn() && resource.data.clientId == request.auth.uid;
      }

      match /contracts/{contractId} {
        // Contracts can be read by the vendor owner and the specified client.
        allow read: if isOwner(vendorId) || (isSignedIn() && resource.data.clientId == request.auth.uid);
        // Only the vendor owner can create, update, or delete contracts.
        allow write: if isOwner(vendorId);
      }
    }

    match /categories/{categoryId} {
      allow get, list: if true; // Publicly readable
      allow write: if false; // Admin-only
    }

    match /suggested_categories/{suggestedCategoryId} {
      allow get, list: if true; // Publicly readable
      // Any signed-in user can create a suggestion.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Admin-only
    }

    match /conversations/{conversationId} {
      function isParticipant() {
        return isSignedIn() && request.auth.uid in resource.data.participantIds;
      }
      
      function isCreatingParticipant() {
         return isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      }

      // Participants can read, update, and create conversations they are part of.
      allow read, update: if isParticipant();
      allow create: if isCreatingParticipant();
      allow list: if isSignedIn() && request.query.where.value == request.auth.uid; // Allow querying for user's own conversations.

      match /messages/{messageId} {
        // Inherits isParticipant check from parent conversation.
        allow read, create: if isParticipant();
        allow update, delete: if false; // Don't allow editing/deleting messages for integrity.
      }
    }
    
    match /bookings/{bookingId} {
        // A user can read or update a booking if they are either the client or the vendor.
       function isBookingParty() {
         return isSignedIn() && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.vendorId);
       }
       
       // Allow a user to create a booking if they are the client.
       function isCreatingBookingParty() {
         return isSignedIn() && (request.auth.uid == request.resource.data.clientId);
       }
       
       allow get, update: if isBookingParty();
       allow create: if isCreatingBookingParty();
       // Users can list bookings, but queries should filter by their UID on the client-side.
       allow list: if isSignedIn();
       allow delete: if false; // Prevent accidental deletion of booking records.
    }
  }
}
