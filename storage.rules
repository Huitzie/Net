
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to read and write to their own user-specific directories.
    // This covers profile pictures and other user-specific uploads.
    match /users/{userId}/{allPaths=**} {
      allow read; // Public read access for profile images.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow vendors to upload and manage all files within their vendor-specific directory.
    // This includes their main profile/banner images and any images for their services.
    match /vendors/{userId}/{allPaths=**} {
      allow read; // All vendor images are publicly readable.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
