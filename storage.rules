rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow vendors to upload images to their own directory.
    // The path is structured as 'vendors/{userId}/{...}'
    // e.g., 'vendors/uid123/profile.jpg' or 'vendors/uid123/services/service456/image.png'
    match /vendors/{userId}/{allPaths=**} {
      allow read; // Allow public read for all images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
